<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eleme.mapper.ops.validator.ValidatorMapper">

	<select id="queryCount" resultType="java.lang.Integer" statementType="STATEMENT">
		select count(*) from ${tableName} t
		<where>
			<if test="field != null and field != ''">
				<![CDATA[ AND t.${field} = '${value}' ]]>
			</if>
			<if test="status != null and status != '' and statusField != null and statusField != '' ">
				<![CDATA[ AND t.${statusField} in (${status}) ]]>
			</if>
		</where>
	</select>

</mapper>