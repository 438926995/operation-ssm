<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eleme.mapper.mart.statistic.UserFeedbackMapper">
	<resultMap id="BaseResultMap" type="com.eleme.domain.mart.statistic.UserFeedback">
		<id column="ID" property="id" jdbcType="INTEGER" />
		<result column="USER_NAME" property="userName" jdbcType="VARCHAR" />
		<result column="USER_IP" property="userIp" jdbcType="VARCHAR" />
		<result column="CREATED_AT" property="createdAt" jdbcType="TIMESTAMP" />
		<result column="USER_FEEDBACK" property="userFeedback" jdbcType="VARCHAR" />
		<result column="USER_CATE" property="userCate" jdbcType="INTEGER" />
	</resultMap>
	
	<sql id="Base_Column_List">
		ID, USER_NAME, USER_IP, CREATED_AT, USER_FEEDBACK, USER_CATE
	</sql>
	
	<select id="selectUserFeedbacksByCate" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select 
		<include refid="Base_Column_List"></include>
		from T_FCO_FEEDBACK
		where USER_CATE = #{userCate}
	</select>
	
	<select id="selectUserFeedbacksByCateAndTimeTotal" resultType="java.lang.Integer" parameterType="java.util.Map">
		select count(*) from T_FCO_FEEDBACK
		where USER_CATE = #{userCate} 
		<if test="startTime!=null">
        	and date(CREATED_AT) >= #{startTime}
        </if> 
       	<if test="endTime!=null"> 
       		and date(CREATED_AT) &lt;= #{endTime}
       	</if>
	</select>
	
	<select id="selectUserFeedbacksByCateAndTime" resultMap="BaseResultMap" parameterType="java.util.Map">
		select 
		<include refid="Base_Column_List"></include>
		from T_FCO_FEEDBACK
		where USER_CATE = #{userCate} 
		<if test="startTime!=null">
        	and date(CREATED_AT) >= #{startTime}
        </if> 
       	<if test="endTime!=null"> 
       		and date(CREATED_AT) &lt;= #{endTime}
       	</if>
       	limit ${startRecord},${pageSize}
	</select>
	
	
</mapper>